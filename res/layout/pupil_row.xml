<RelativeLayout android:id="@+id/RelativeLayout01"
	android:layout_width="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content">
	<TextView android:textStyle="bold" android:gravity="center_vertical"
		android:id="@+id/tvChildName" android:text="Pupil Name"
		android:paddingLeft="5dip" android:layout_height="55dip"
		android:layout_width="250dip" android:textSize="21dip"></TextView>
	<LinearLayout android:id="@+id/LinearLayout01"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_toRightOf="@id/tvChildName" android:gravity="right">
		<ImageView android:id="@+id/editButton" android:src="@drawable/edit_pencil"
			android:layout_height="55dip" android:layout_width="55dip" android:scaleType="center"></ImageView>
	</LinearLayout>
</RelativeLayout>
